<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloudcare.mapper.HealthRecordMapper">

    <!-- 查询指定日期之前创建的健康记录数量 -->
    <select id="selectCountByCreateTimeBefore" resultType="int">
        SELECT COUNT(1) FROM health_record
        WHERE DATE(create_time) &lt;= #{date}
    </select>

    <!-- 根据记录类型查询健康记录数量 -->
    <select id="selectCountByRecordType" resultType="int">
        SELECT COUNT(1) FROM health_record
        WHERE record_type = #{recordType}
    </select>

    <!-- 根据记录等级查询健康记录数量 -->
    <select id="selectCountByRecordLevel" resultType="int">
        SELECT COUNT(1) FROM health_record
        WHERE record_level = #{recordLevel}
    </select>

</mapper>